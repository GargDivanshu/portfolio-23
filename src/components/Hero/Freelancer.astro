<div class="flex space-x-8 text-9xl font-extrabold">
    <h3 class="banner_line translate-x-[60vw]" id="seo">
        <div class="flex items-end space-x-7 text-primary">
            <span class="cursor-scale">FREELANCER</span>
        </div>
    </h3>
</div>

<script>
    const bannerLine = document.getElementById("seo");
    let scrollPos = window.scrollY;
    let currentPos = 0;

    window.addEventListener("scroll", () => {
        const newScrollPos = window.scrollY;
        const scrollDelta = newScrollPos - scrollPos;
        currentPos += scrollDelta;
        if (!bannerLine) return;

        bannerLine.style.transform = `translateX(calc(60vw + ${
            currentPos / 3
        }px))`;

        scrollPos = newScrollPos;
    });
</script>

<style>
    h3::before,
    h3::after {
        font-family: 'Tourney';
        content: "FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER FREELANCER";
    }
    /* make a floating animation where the image is just moving a little bit like in water */
    @keyframes floating {
        0% {
            transform: translate(0, 0px) rotate(-1deg);
        }
        50% {
            transform: translate(0, -15px) rotate(3deg);
        }
        100% {
            transform: translate(0, 0px) rotate(-1deg);
        }
    }
    /* apply animation to the image */
    img {
        animation: floating 3s ease-in-out infinite;
    }
</style>